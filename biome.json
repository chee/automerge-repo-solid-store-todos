{
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"bracketSameLine": true,
			"bracketSpacing": false,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"trailingCommas": "all",
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off",
				"noDoubleEquals": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off",
				"useConst": "off"
			}
		}
	}
}
